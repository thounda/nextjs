// Define database connection via the PRISMA_DATABASE_URL env var
datasource db {
provider = "postgresql"
url      = env("PRISMA_DATABASE_URL")
}

// Define custom output path for generated Prisma Client
generator client {
provider = "prisma-client-js"
}

model Post {
id        String   @id @default(uuid())
title     String
content   String?
date      String?
user      String?
}